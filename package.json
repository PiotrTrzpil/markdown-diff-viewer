{
  "name": "markdown-diff-viewer",
  "version": "1.0.0",
  "description": "Side-by-side rich diff viewer for Markdown files with intelligent block-level and character-level diffing",
  "type": "module",
  "bin": {
    "md-diff": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "analyze": "madge --circular --extensions ts src/ && depcruise src --config .dependency-cruiser.cjs && knip && jscpd src && type-coverage --detail --at-least 95",
    "check": "tsc --noEmit && pnpm lint && pnpm test",
    "prepublishOnly": "pnpm check && pnpm build"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "keywords": [
    "markdown",
    "diff",
    "viewer",
    "compare",
    "side-by-side",
    "git",
    "cli",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/user/markdown-diff-viewer"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.11",
    "commander": "^14.0.3",
    "diff": "^7.0.0",
    "open": "^10.1.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/diff": "^6.0.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.0.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.0.0",
    "jscpd": "^4.0.0",
    "knip": "^5.0.0",
    "lint-staged": "^15.0.0",
    "madge": "^8.0.0",
    "type-coverage": "^2.29.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}
